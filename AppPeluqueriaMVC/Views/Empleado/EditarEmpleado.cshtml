@model AppPeluqueriaMVC.Models.Empleado
@{
    ViewData["Title"] = "Editar empleado";
}

<h1 class="text-center offset-1">Empleados</h1>

<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>Editar Empleados</strong></h3>
            </div>
            <div class="card-body">
                <form asp-action="EditarEmpleado" method="post">

                    <input type="hidden" asp-for="Id">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="DNI" class="control-label"></label>
                        <input asp-for="DNI" class="form-control" placeholder="Ingresa el DNI">
                        <span asp-validation-for="DNI" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" class="form-control" placeholder="Ingresa el Nombre">
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Apellido" class="control-label"></label>
                        <input asp-for="Apellido" class="form-control" placeholder="Ingresa el Apellido">
                        <span asp-validation-for="Apellido" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Especialidad" class="control-label"></label>
                        <input asp-for="Especialidad" class="form-control" placeholder="Ingresa la Especialidad">
                        <span asp-validation-for="Especialidad" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Sueldo" class="control-label"></label>
                        <input asp-for="Sueldo" class="form-control" placeholder="Ingresa el Sueldo">
                        <span asp-validation-for="Sueldo" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-primary d-block mx-auto"><i class="bi bi-pencil-fill"></i>Editar empleado</button>
                    </div>
                </form>

                <a asp-controller="Empleado" asp-action="VistaEmpleados">Volver</a>
            </div>
        </div>
    </div>
</div>