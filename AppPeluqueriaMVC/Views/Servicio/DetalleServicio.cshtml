@model AppPeluqueriaMVC.Models.Servicio
@{
    ViewData["Titel"] = "Detalle servicio";
}


<h1 class="text-center offset-1">Servicio</h1>

<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>Detalle del servicio</strong></h3>
            </div>
            <div class="card-body">
                <ul class="list-group">
                    <li class="list-group-item"><strong>ID: </strong>@Html.DisplayFor(m => m.Id)</li>
                    <li class="list-group-item"><strong>Nombre: </strong>@Html.DisplayFor(m => m.Nombre)</li>
                    <li class="list-group-item"><strong>Descripción: </strong>@Html.DisplayFor(m => m.Descripcion)</li>
                    <li class="list-group-item"><strong>Precio: </strong>@Html.DisplayFor(m => m.Precio)</li>
                    <li class="list-group-item"><strong>Fecha de creado: </strong>@Html.DisplayFor(m => m.Created)</li>
                </ul>
            </div>
            <div class="card-body">
                <form asp-action="BorrarServicio" method="post">
                    <input asp-for="Id" type="hidden">

                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-danger d-block mx-auto"><i class="bi bi-trash"></i>Eliminar servicio</button>
                    </div>
                </form>

                <a asp-controller="Servicio" asp-action="VistaCosmetico">Volver</a>
            </div>
        </div>
    </div>
</div>